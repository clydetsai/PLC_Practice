              </type>
              <initialValue>
                <simpleValue value="7" />
              </initialValue>
            </variable>
            <variable name="waitSec">
              <type>
                <WORD />
              </type>
              <initialValue>
                <simpleValue value="greenSec" />
              </initialValue>
            </variable>
            <variable name="waitTimer">
              <type>
                <derived name="TON" />
              </type>
            </variable>
            <variable name="flickTimer">
              <type>
                <derived name="TON" />
              </type>
            </variable>
            <variable name="greenLight">
              <type>
                <BOOL />
              </type>
              <initialValue>
                <simpleValue value="TRUE" />
              </initialValue>
            </variable>
            <variable name="yellowLight">
              <type>
                <BOOL />
              </type>
              <initialValue>
                <simpleValue value="FALSE" />
              </initialValue>
            </variable>
            <variable name="redLight">
              <type>
                <BOOL />
              </type>
              <initialValue>
                <simpleValue value="FALSE" />
              </initialValue>
            </variable>
            <variable name="nextStatus">
              <type>
                <INT />
              </type>
              <initialValue>
                <simpleValue value="1" />
              </initialValue>
            </variable>
          </localVars>
        </interface>
        <body>
          <ST>
            <xhtml xmlns="http://www.w3.org/1999/xhtml">
waitTimer(IN := NOT waitTimer.Q, PT :=WORD_TO_TIME(waitSec * 1000));

IF waitTimer.Q = TRUE THEN
	CASE nextStatus OF
		0:  greenLight := TRUE;
			yellowLight := redLight := FALSE;
			waitSec := greenSec;
			nextStatus := 1;
		1:	waitSec := greenFlinkSec;
			nextStatus := 5;
		5:  yellowLight := TRUE;
			greenLight := redLight := FALSE;
			waitSec := yellowSec;
			nextStatus := 10;
		10:  redLight := TRUE;
			greenLight := yellowLight := FALSE;
			waitSec := redSec;
			nextStatus := 0;
	END_CASE	
END_IF

IF nextStatus = 5 THEN
	flickTimer(IN := NOT flickTimer.Q, PT := T#500MS);
	IF flickTimer.Q = TRUE THEN
		greenLight := NOT greenLight;
		//IF greenLight = TRUE THEN
		//	greenLight := FALSE;
		//ELSE
		//	greenLight := TRUE;
		//END_IF
	END_IF
END_IF	
</xhtml>
          </ST>
        </body>
