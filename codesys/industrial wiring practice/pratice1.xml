        <body>
          <ST>
            <xhtml xmlns="http://www.w3.org/1999/xhtml">
IF PB6_EMS THEN
    IF status &lt;&gt; MACHINESTATUS.EMS THEN
        memoryStatus := status;
        status := MACHINESTATUS.EMS;
        PL4_Power := TRUE;
        memory[4] := 0;
    END_IF
ELSIF NOT PB6_EMS AND status = MACHINESTATUS.EMS THEN
    status := MACHINESTATUS.RECOVERY;
ELSIF PB1_Stop THEN
    IF status &lt;&gt; MACHINESTATUS.CLEAR THEN
        status := MACHINESTATUS.CLEAR;
        M1 := M2 := M3 := PL1_M1 := PL2_M2 := PL3_M3 := PL4_Power := TRUE;
        waitSec := M1RunTime;
        waitTimer(IN := FALSE);
        blinkTimer(IN := FALSE);
    END_IF;
ELSIF PB2_Start THEN
    status := MACHINESTATUS.RUNNING;
END_IF;

CASE status OF
    MACHINESTATUS.STANDBY:
        PL4_Power := TRUE;
    MACHINESTATUS.RUNNING:
        IF NOT M1 THEN
            M1 := PL1_M1 := TRUE;
            waitSec := M1RunTime;
        ELSIF NOT M2 AND waitTimer.Q THEN
            M2 := PL2_M2 := TRUE;
            waitSec := M2RunTime;
        ELSIF NOT M3 AND waitTimer.Q THEN
            M3 := PL3_M3 := PL4_Power := TRUE;
		END_IF;
        
        IF NOT M3 THEN
            IF waitSec = -1 THEN
                waitTime := memoryTime;
            ELSE
                waitTime := INT_TO_TIME(waitSec * 1000);
			END_IF
            waitTimer(IN := NOT waitTimer.Q, PT := waitTime);
            blinkTimer(IN := NOT blinkTimer.Q, PT := T#500MS);
            IF blinkTimer.Q THEN
                PL4_Power := NOT PL4_Power;
			END_IF;
		END_IF;
    MACHINESTATUS.CLEAR:
        IF M3 THEN
            IF waitSec = -1 THEN
                waitTime := memoryTime;
            ELSE
                waitTime := INT_TO_TIME(waitSec * 1000);
			END_IF
            waitTimer(IN := NOT waitTimer.Q, PT := waitTime);
            blinkTimer(IN := NOT blinkTimer.Q, PT := T#500MS);
            IF blinkTimer.Q THEN
                IF M1 THEN
                    PL1_M1 := PL4_Power;
                ELSIF M2 THEN
                    PL2_M2 := PL4_Power;
                ELSIF M3 THEN
                    PL3_M3 := PL4_Power;
				END_IF;
                PL4_Power := NOT PL4_Power;
			END_IF;
        END_IF;
        
        IF M1 AND waitTimer.Q THEN
            M1 := PL1_M1 := FALSE;
            waitSec := M2RunTime;
        ELSIF M2 AND waitTimer.Q THEN
            M2 := PL2_M2 := FALSE;
            waitSec := M3RunTime;
        ELSIF M3 AND waitTimer.Q THEN
            M3 := PL3_M3 := FALSE;
            status := MACHINESTATUS.STANDBY;
		END_IF;
    MACHINESTATUS.EMS:
        IF memory[4] &lt;&gt; 1 THEN
            FOR n := 1 TO 3 DO
                memory[n] := 0;
            END_FOR;
    
            IF M1 THEN
                memory[1] := 1;
            END_IF;
            IF M2 THEN
                memory[2] := 1;
            END_IF;
            IF M3 THEN
                memory[3] := 1;
            END_IF;
            // save remaining time, then set waitSec to -1, therefore, after recovery, the timer will be set according to pre-saved time.
            memoryTime := INT_TO_TIME(waitSec*1000) - waitTimer.ET;
            waitSec := -1;
            waitTimer(IN := FALSE);
            blinkTimer(IN := FALSE);
            memory[4] := 1;
        END_IF;
        M1 := M2 := M3 := PL1_M1 := PL2_M2 := PL3_M3 := FALSE;
    MACHINESTATUS.RECOVERY:
        IF memory[1] = 1 THEN
            M1 := PL1_M1 := TRUE;
		END_IF;
        IF memory[2] = 1 THEN
            M2 := PL2_M2 := TRUE;
		END_IF;
        IF memory[3] = 1 THEN
            M3 := PL3_M3 := TRUE;
		END_IF
        status := memoryStatus;
END_CASE;
</xhtml>
          </ST>
